<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/gelap"
    android:padding="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUSICA APP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="@color/pink"
            android:visibility="visible"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/treble_cef"
            app:tint="@color/pink" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Login"
        android:fontFamily="@font/poppins_bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Welcome back! Please enter your details."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/abu_muda"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="24dp">
            <TextView
                android:id="@+id/label_usn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Username"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_usn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:hint="Enter your username"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/label_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_pw_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/bg_input"
                android:hint="Enter your password"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Login"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/gelap"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/btn_to_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Register here."
            android:textColor="@color/abu_tua"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            />


    </LinearLayout>

</LinearLayout>