<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:padding="32dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_top_home">
        <TextView
            android:id="@+id/txt_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/gelap"
            android:fontFamily="@font/poppins_regular"
            android:drawableStart="@drawable/profile"
            android:drawablePadding="8dp"
            android:drawableTint="@color/gelap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/gelap"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_hello"
            />
        <TextView
            android:id="@+id/txt_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/gelap"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_name"
            />
        <ImageView
            android:id="@+id/img_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notif"
            app:layout_constraintEnd_toStartOf="@id/img_history"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:tint="@color/gelap"
            />
        <ImageView
            android:id="@+id/img_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gelap" />

        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music Genres"
            android:textSize="22dp"
            android:textColor="@color/gelap"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="16dp"
            android:drawableEnd="@drawable/treble_cef"
            android:drawableTint="@color/gelap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_hello"
            />
        <LinearLayout
            android:id="@+id/ll_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_genre"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/old"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/old"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_musics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>