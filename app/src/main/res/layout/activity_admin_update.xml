<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminUpdateActivity"
    android:background="@color/gelap"
    android:padding="32dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/baseline_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txt_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Data"
        android:fontFamily="@font/poppins_bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/desc_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fill out the details to edit music data"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/txt_edit"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/abu_muda"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/desc_edit"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="24dp">
            <TextView
                android:id="@+id/label_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song title"
                android:textSize="16sp"
                android:textColor="@color/gelap"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:hint="Enter song title"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/label_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Artist"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:hint="Enter song artist"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/label_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Album title"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:hint="Enter album name"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/label_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rilis"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/input_rilis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:hint="Enter song release date"
                android:textColor="@color/gelap"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                />
            <Button
                android:id="@+id/btn_edit_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Edit"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/gelap"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>